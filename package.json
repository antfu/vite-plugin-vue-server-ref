{
  "name": "vite-plugin-vue-server-ref",
  "version": "0.2.4",
  "description": "Share state between clients and Vite server",
  "keywords": [
    "vite-plugin"
  ],
  "homepage": "https://github.com/antfu/vite-plugin-vue-server-ref#readme",
  "bugs": {
    "url": "https://github.com/antfu/vite-plugin-vue-server-ref/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/antfu/vite-plugin-vue-server-ref.git"
  },
  "funding": "https://github.com/sponsors/antfu",
  "license": "MIT",
  "author": "Anthony Fu <anthonyfu117@hotmail.com>",
  "sideEffects": false,
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./client": {
      "import": "./dist/client.mjs",
      "require": "./dist/client.js"
    }
  },
  "files": [
    "dist",
    "*.d.ts"
  ],
  "scripts": {
    "prepublishOnly": "npm run build",
    "build": "tsup src/index.ts src/client.ts --dts --format cjs,esm --no-splitting",
    "dev": "npm run build -- --watch",
    "demo": "pnpm -C example run dev",
    "release": "bumpp --commit --push --tag && npm publish",
    "lint": "eslint \"{src,test}/**/*.ts\"",
    "lint:fix": "npm run lint -- --fix",
    "test": "jest",
    "test:update": "jest -u"
  },
  "dependencies": {
    "debug": "^4.3.2",
    "ufo": "^0.7.9"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^0.8.0",
    "@antfu/ni": "^0.9.3",
    "@antfu/utils": "^0.3.0",
    "@types/debug": "^4.1.7",
    "@types/fs-extra": "^9.0.12",
    "@types/jest": "^27.0.1",
    "@types/node": "^16.7.13",
    "@vue/reactivity": "^3.2.10",
    "bumpp": "^7.1.1",
    "eslint": "^7.32.0",
    "eslint-plugin-jest": "^24.4.0",
    "esno": "^0.9.1",
    "jest": "^27.1.0",
    "klona": "^2.0.4",
    "ts-jest": "^27.0.5",
    "tsup": "^4.14.0",
    "typescript": "^4.4.2",
    "vite": "^2.5.5",
    "vue": "^3.2.10"
  },
  "peerDependencies": {
    "vite": "^2.0.0",
    "vue": "^3.0.0-0"
  }
}
