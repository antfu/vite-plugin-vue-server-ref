{
  "name": "vite-plugin-vue-server-ref",
  "version": "0.3.3",
  "packageManager": "pnpm@8.3.0",
  "description": "Share state between clients and Vite server",
  "author": "Anthony Fu <anthonyfu117@hotmail.com>",
  "license": "MIT",
  "funding": "https://github.com/sponsors/antfu",
  "homepage": "https://github.com/antfu/vite-plugin-vue-server-ref#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/antfu/vite-plugin-vue-server-ref.git"
  },
  "bugs": {
    "url": "https://github.com/antfu/vite-plugin-vue-server-ref/issues"
  },
  "keywords": [
    "vite-plugin"
  ],
  "sideEffects": false,
  "exports": {
    ".": {
      "require": "./dist/index.js",
      "import": "./dist/index.mjs"
    },
    "./client": {
      "require": "./dist/client.js",
      "import": "./dist/client.mjs"
    }
  },
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "*.d.ts"
  ],
  "scripts": {
    "prepublishOnly": "nr build",
    "build": "tsup src/index.ts src/client.ts --dts --format cjs,esm --no-splitting",
    "dev": "nr build --watch",
    "demo": "pnpm -C example run dev",
    "release": "bumpp && npm publish",
    "lint": "eslint .",
    "test": "vitest"
  },
  "peerDependencies": {
    "vite": "^2.0.0 || ^3.0.0 || ^4.0.0",
    "vue": "^3.0.0"
  },
  "dependencies": {
    "debug": "^4.3.4",
    "ufo": "^1.1.1"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^0.38.5",
    "@antfu/ni": "^0.21.3",
    "@antfu/utils": "^0.7.2",
    "@types/debug": "^4.1.7",
    "@types/fs-extra": "^11.0.1",
    "@types/node": "^18.15.11",
    "@vue/reactivity": "^3.2.47",
    "bumpp": "^9.1.0",
    "eslint": "^8.38.0",
    "esno": "^0.16.3",
    "klona": "^2.0.6",
    "tsup": "^6.7.0",
    "typescript": "^5.0.4",
    "vite": "^4.2.2",
    "vitest": "^0.30.1",
    "vue": "^3.2.47"
  }
}
