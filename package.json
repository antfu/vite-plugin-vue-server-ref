{
  "name": "vite-plugin-vue-server-ref",
  "type": "module",
  "version": "0.4.1",
  "packageManager": "pnpm@8.15.1",
  "description": "Share state between clients and Vite server",
  "author": "Anthony Fu <anthonyfu117@hotmail.com>",
  "license": "MIT",
  "funding": "https://github.com/sponsors/antfu",
  "homepage": "https://github.com/antfu/vite-plugin-vue-server-ref#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/antfu/vite-plugin-vue-server-ref.git"
  },
  "bugs": {
    "url": "https://github.com/antfu/vite-plugin-vue-server-ref/issues"
  },
  "keywords": [
    "vite-plugin"
  ],
  "sideEffects": false,
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./client": {
      "import": "./dist/client.js",
      "require": "./dist/client.cjs"
    }
  },
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "*.d.ts",
    "dist"
  ],
  "scripts": {
    "prepublishOnly": "nr build",
    "build": "tsup src/index.ts src/client.ts --dts --format cjs,esm --no-splitting",
    "dev": "nr build --watch",
    "demo": "pnpm -C example run dev",
    "release": "bumpp && npm publish",
    "lint": "eslint .",
    "test": "vitest"
  },
  "peerDependencies": {
    "vite": ">=2.0.0",
    "vue": "^3.0.0"
  },
  "dependencies": {
    "debug": "^4.3.4",
    "mlly": "^1.5.0",
    "ufo": "^1.3.2"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^2.6.3",
    "@antfu/ni": "^0.21.12",
    "@antfu/utils": "^0.7.7",
    "@types/debug": "^4.1.12",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^20.11.16",
    "@vue/reactivity": "^3.4.15",
    "bumpp": "^9.3.0",
    "eslint": "^8.56.0",
    "esno": "^4.0.0",
    "klona": "^2.0.6",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3",
    "vite": "^5.0.12",
    "vitest": "^1.2.2",
    "vue": "^3.4.15"
  }
}
